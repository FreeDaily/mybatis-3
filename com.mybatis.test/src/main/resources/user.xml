<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.study.biz.UserDao">
  <resultMap id="map" type="com.mybatis.study.biz.User">
    <id property="id" column="id" jdbcType="INTEGER"/>
    <id property="name" column="name" jdbcType="VARCHAR"/>
    <id property="sex" column="sex" typeHandler="com.mybatis.study.biz.SexEnumTypeHandler"
        javaType="com.mybatis.study.biz.Sex"/>
  </resultMap>

  <select id="findById" resultMap="map">
      select * from user where id = #{id} limit 1;
  </select>
  <select id="find" resultMap="map">
    select * from user where  id = #{id}
  </select>
</mapper>
